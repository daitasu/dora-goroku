<!DOCTYPE html>
<html>
  <head>
    <title>DoraGoroku</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, user-scalable=yes">
    <%= favicon_link_tag('favicon.ico') %>
    <meta property="og:title" content="Dora-Goroku" />
    <meta property="og:url" content="<%= request.url %>" />
    <meta property="og:description"
      content="Dora-Goroku is a public service api that serve about Doraemon quotes." />
    <meta property="og:type" content="website">
    <meta property="og:image" content="<%= image_url('doragoro.png') %>" />
  </head>
  <body>
    <header>
      <h1>Dora Goroku</h1>
      <div class="github">
        <%= link_to image_tag("github.png", alt: "github logo"),
          'https://github.com/daitasu/dora-goroku' %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
